<h2 class="mb-4"><i class="bi bi-card-checklist me-2"></i>ToDo Details</h2>

<div class="card">
  <div class="card-body">
    <h4 class="card-title"><%= @todo.title %></h4>

    <p class="card-text">
      <strong>Category:</strong> <%= @todo.category.name %><br>
      <strong>Priority:</strong> 
      <span class="badge <%= @todo.priority ? 'bg-danger' : 'bg-secondary' %>">
        <%= @todo.priority ? "High" : "Normal" %>
      </span><br>
      <strong>Completed:</strong>
      <span class="badge <%= @todo.completed ? 'bg-success' : 'bg-warning text-dark' %>">
        <%= @todo.completed ? "Yes" : "No" %>
      </span>
    </p>

    <div class="d-flex gap-2 mt-3">
      <%= link_to "Edit This ToDo", edit_todo_path(@todo), class: "btn btn-outline-primary" %>
      <%= link_to "Back to ToDos", todos_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Destroy This ToDo", todo_path(@todo),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
      class: "btn btn-outline-danger" %>

    </div>
  </div>
</div>
