<h2 class="mb-4">
  <i class="bi bi-person-circle me-2"></i>Welcome, <%= @user.first_name %>!
</h2>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <i class="bi bi-person-badge me-2"></i><%= @user.first_name %> <%= @user.last_name %>
    </h5>

    <p class="card-text">
      <i class="bi bi-person me-1"></i><strong>Username:</strong> <%= @user.username %><br>
      <i class="bi bi-envelope me-1"></i><strong>Email:</strong> <%= @user.email %>
    </p>

    <%= button_to user_path(@user), method: :delete,
      data: { turbo_confirm: "Are you sure you want to delete your account?" },
      class: "btn btn-outline-danger" do %>
  <i class="bi bi-trash me-1"></i> Delete My Account
<% end %>

  </div>
</div>
